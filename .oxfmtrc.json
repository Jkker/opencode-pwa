{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    "**/routeTree.gen.ts",
    ".nx",
    ".tanstack",
    "dist",
    "node_modules",
    "storybook-static",
    "pnpm-lock.yaml",
    "apps/presentation/*.md",
    "assets"
  ],
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 100,
  "experimentalSortPackageJson": true,
  "experimentalSortImports": {
    "partitionByComment": true
  }
}
