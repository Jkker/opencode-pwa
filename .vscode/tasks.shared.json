{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lint",
      "type": "shell",
      "command": "pnpm lint",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "check",
        "color": "terminal.ansiYellow"
      }
    },
    {
      "label": "lint:fix",
      "type": "shell",
      "command": "pnpm lint:fix --format=stylish",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "check-all",
        "color": "terminal.ansiYellow"
      }
    },
    {
      "label": "format",
      "type": "npm",
      "script": "format",
      "icon": {
        "id": "paintcan",
        "color": "terminal.ansiBlue"
      },
      "problemMatcher": []
    }
  ]
}
